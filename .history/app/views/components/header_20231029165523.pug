//================= Header ====================
header(class= "header")
	div(class="container")
		div(class="row")
			div(class="col" style={display: none})
				div(id= "menu-btn", class="btn-bars") #[i(class= "fa-solid fa-bars-staggered")]
			|
			|
			div(class="col")
				a(href="#", class="logo") 
					img( style={width:'45px', margin:'7px'} src="../img/beach-tree.png", alt="")
					span Travel
			div(class="col")
				div.overlay-box
					nav(class= "navbar")
						- const $link =["Home", "Destination", "Services", "Outstanding","Seller", "Guides"];
						- var number = 6;
						- for(let $run = 0; $run < $link.length; $run++)
							|
							| 
							if ($link[$run] == "Home")
								a(href= `#${$link[$run]}` class="active-link") #{$link[$run]} 
							else 
								a(href= `#${$link[$run]}`) #{$link[$run]} 
						span(class="line-item")
						a(href="#") #[i(class="fa-solid fa-cart-shopping")] 
						a(href="#") #[i(class="fa-solid fa-chalkboard-user")]
			|
			|
			div(class="col")
				span(class="search-shopping")
					a(href="#") #[i(class="fa-solid fa-magnifying-glass")]
			
			div(class="col")
				- var btn = "#book-gorm"
				|
				|
				a(href= btn, class= "btn") #{btn.replace(`${btn}`,"Sign in")}